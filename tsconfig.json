{
  "include": ["src"],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build", // js 파일이 저장될 디렉토리
    "strictNullChecks": true // 엄격한 null 검사 사용, false로 설정 시 오류 발생하지 않음
  }
}
